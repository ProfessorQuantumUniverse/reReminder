<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:padding="24dp">
    <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical">
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:gravity="center" android:text="Stunden" android:textAppearance="@style/TextAppearance.Material3.LabelLarge"/>
        <NumberPicker android:id="@+id/hoursPicker" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical">
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:gravity="center" android:text="Minuten" android:textAppearance="@style/TextAppearance.Material3.LabelLarge"/>
        <NumberPicker android:id="@+id/minutesPicker" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>